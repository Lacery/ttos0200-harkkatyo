<Page
    x:Class="harkkatyo.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:harkkatyo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ProgressBar Margin="10,10,0,13" Name="PBar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="80" Value="0"  />
        <Button x:Name="StartButton" FontSize="35" Content="Start" VerticalAlignment="Top" HorizontalAlignment="Center" Click="StartButton_Click"/>
        <Button x:Name="StopButton" FontSize="35" Content="Stop" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,100,0,0" Click="StopButton_Click"/>
        <Button x:Name="backButton" Content="Back" Grid.Column="0" Grid.Row="2" FontSize="35" Margin="30,0,0,0" Click="backButton_Click"/>
        <Button x:Name="testButton" Content="Test" FontSize="35" Margin="30,200,0,0" Click="testButton_Click"/>

    </Grid>
</Page>
